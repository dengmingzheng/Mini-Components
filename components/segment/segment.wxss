/* components/segment/segment.wxss */

.segment-group{
  width: 100%;
}

.segment-group .segment-header{
  width: 100%;
  height: 60rpx;
  display: flex;
  border: 1px solid #e4e4e4;
  border-radius: 10rpx;
}

.segment-group .segment-header .segment-item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #e4e4e4;
}

.segment-group .segment-header .segment-item:last-of-type{
  border-right:none;
}

.segment-group .segment-header .active{
  background-color: #1ADD16;
  color: #FFF;
}